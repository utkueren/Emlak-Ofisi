@model Emlak_Ofisi.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row" style="padding-bottom:200px;">
        @Html.Action("PartialFiltre", "Home")

        <div class="col-md-9">
            <div class="card" style="width:845px; margin-bottom:138px; margin-top:20px;">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form - horizontal" }))
                {




                    <div class="form-group row" style="padding-top: 20px; padding-left:10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, " ", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Şifre</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Password, " ", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group" style="padding-top: 10px; padding-left: 10px; ">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success" style="margin-bottom:10px; margin-left:145px; width: 35%;">Giriş Yap<i class="fa fa-sign-in" style="font-size: 14px; padding-top: 6px; padding-left: 8px;"></i></button>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>

