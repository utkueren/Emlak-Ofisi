@model Emlak_Ofisi.Models.Register
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        @Html.Action("PartialFiltre", "Home")

        <div class="col-md-9">
            <div class="card" style="width:845px; margin-bottom:138px; margin-top:20px;">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form - horizontal" }))
                {

                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, " ", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Soyadı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Surname, " ", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row" style="padding-top: 20px; padding-left:10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, " ", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row" style="padding-top: 20px; padding-left:10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">E-Posta</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, " ", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Şifre</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Password, " ", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Şifre Tekrar</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.RePassword, " ", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="padding-top: 10px; padding-left: 10px; ">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary" style="margin-bottom:10px; margin-left:145px; width: 35%;">Kayıt Ol<i class="fa fa-users" style="font-size: 14px; padding-top: 6px; padding-left: 8px;"></i></button>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>

