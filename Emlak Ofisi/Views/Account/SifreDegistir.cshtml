@model Emlak_Ofisi.Models.SifreDegistirme 
@{
    ViewBag.Title = "SifreDegistir";
}
<div class="container">
    <div class="row" style="padding-bottom:187px;">
        @Html.Action("PartialFiltre", "Home")

        <div class="col-md-9">
            <div class="card" style="width:845px; margin-bottom:138px; margin-top:20px;">
                @using (Html.BeginForm("SifreDegistir", "Account", FormMethod.Post, new { @class = "form - horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Eski Şifre</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, " ", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row" style="padding-top: 20px; padding-left: 10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Yeni Şifre</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, " ", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row" style="padding-top: 20px; padding-left:10px;">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="font-weight: bold;">Yeni Şifre Tekrar</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, " ", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group" style="padding-top: 10px; padding-left: 10px; ">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary" style="margin-bottom:10px; margin-left:145px; width: 35%;">Şifre Değiştir<i class="fa fa-edit" style="font-size: 14px; padding-top: 6px; padding-left: 8px;"></i></button>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>
