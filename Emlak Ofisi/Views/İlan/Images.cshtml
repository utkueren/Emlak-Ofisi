
@{
    ViewBag.Title = "Images";
}

<div class="container" style="padding-bottom:445px;">
    @{

        Html.BeginForm("Images", "İlan", FormMethod.Post, new { enctype = "multipart/Form-data" });
        foreach (var item in ViewBag.ilan)
        {
            <h3 style="padding-top:30px;">@item.İlanId Numaralı ilan için Resim Ekle</h3>
            <table>
                <tr>
                    <td>
                        Resim Seç
                    </td>
                    <td><input type="hidden" name="id" value="@item.İlanId" /></td>
                    <td><input type="file" name="file" /></td>
                    <td><input type="submit" value="Ekle" class="btn btn-primary" /></td>
                    <td> @Html.ActionLink("Mahalle Listesi", "Index", null, new { @class = "btn btn-warning" })</td>
                </tr>
            </table>
        }
     }
    <br />
    <div class="row">
        @foreach (var item in ViewBag.rsml)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="~/images/@item.ResimAd" height="250" width="250" />
                </div>
            </div>
        }
    </div>
</div>

